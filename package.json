{
  "name": "joss-css",
  "version": "1.0.0",
  "description": "Styling CSS for my themes purpose",
  "main": "sass/joss.sass",
  "scripts": {
    "build": "node-sass --output-style expanded sass/joss.sass css/joss.css",
