  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "clean-css-cli": "^5.6.2",
    "node-sass": "^9.0.0",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.5"
  }
}
